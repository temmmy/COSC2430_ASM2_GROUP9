<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <%- include('./partials/link.ejs') %>
    <script
      defer
      src="js/vendorViewProducts.js"
    ></script>
    <title>Minima Records | Your Products</title>
  </head>

  <body class="flex-wrapper">
    <%- include('./partials/header_vendor.ejs') %>
    <main>
      <section id="hero">
        <div class="container text-center text-lg-start my-5">
          <h1 class="display-2">Your Products</h1>
          <p class="lead">Take a look at your uploaded products here</p>
        </div>
        <div class="container">
          <button
            type="button"
            class="btn btn-outline-dark mb-2"
            data-bs-toggle="modal"
            data-bs-target="#static"
          >
            Add a new product
          </button>
          <table class="table mb-5">
            <thead>
              <tr>
                <th scope="col">No.</th>
                <th scope="col"></th>
                <th scope="col">Record Name</th>
                <th scope="col">Artist</th>
                <th scope="col">Price</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% products.slice().reverse().forEach(function(product, i) { %>
              <tr>
                <td class="align-middle"><%= i+1 %></td>
                <td class="align-middle">
                  <img
                    src="/images/<%= product.image %>"
                    alt=""
                    height="50"
                  />
                </td>
                <td class="align-middle"><%= product.name %></td>
                <td class="align-middle"><%= product.artistName %></td>
                <td class="align-middle"><%= product.price %> $</td>
                <td class="align-middle">
                  <button
                    type="button"
                    class="btn btn-outline-dark border-0 mb-2 edit-btn"
                    data-bs-toggle="modal"
                    data-bs-target="#editModal"
                    data-name="<%= product.name %>"
                    data-artistName="<%= product.artistName %>"
                    data-description="<%= product.description %>"
                    data-price="<%= product.price %>"
                    data-image="<%= product.image %>"
                    data-id="<%= product._id %>"
                  >
                    <i class="bi bi-pencil-square mx-2"></i>
                  </button>
                  <a
                    class="link-secondary btn btn-outline-dark border-0 mb-2"
                    href="/delete/<%=product._id%>"
                  >
                    <i class="bi bi-trash3-fill mx-2"></i>
                  </a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <!-- Add Product -->
        <div
          class="modal fade"
          id="static"
          data-bs-keyboard="false"
          tabindex="-1"
          aria-labelledby="staticBackdropLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5
                  class="modal-title"
                  id="staticBackdropLabel"
                >
                  New Product
                </h5>
              </div>
              <form
                id="addForm"
                class="mx-auto"
                method="post"
                enctype="multipart/form-data"
              >
                <div class="form-group mt-3 mb-3">
                  <label for="name">The title of your record</label>
                  <input
                    type="text"
                    class="form-control"
                    name="name"
                    id="name"
                    placeholder="Enter here"
                    required
                  />
                  <div class="name_error text-danger"></div>
                </div>
                <div class="form-group mb-3">
                  <label for="artistName">The artists' name(s)</label>
                  <input
                    type="text"
                    class="form-control"
                    name="artistName"
                    id="artistName"
                    placeholder="Enter here"
                    required
                  />
                  <div class="artistName_error text-danger"></div>
                </div>

                <div class="form-group mb-3">
                  <label for="description">Description</label>
                  <textarea
                    class="form-control"
                    name="description"
                    id="description"
                    placeholder="Enter here"
                    required
                    rows="3"
                  ></textarea>
                  <div class="description_error text-danger"></div>
                </div>
                <div class="form-group mb-3">
                  <label for="price">Price</label>
                  <input
                    type="number"
                    class="form-control"
                    name="price"
                    id="price"
                    placeholder="Enter here (in dollars)"
                    required
                  />
                  <div class="price_error text-danger"></div>
                </div>
                <div class="mb-3">
                  <label
                    for="image"
                    class="form-label"
                    >The record's image</label
                  >
                  <input
                    class="form-control"
                    name="image"
                    type="file"
                    id="image"
                    required
                  />
                  <div class="image_error text-danger"></div>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-outline-secondary"
                    data-bs-dismiss="modal"
                  >
                    Cancel
                  </button>
                  <button
                    type="submit"
                    class="btn btn-dark"
                  >
                    Confirm
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Edit Modal -->
        <div
          class="modal fade"
          id="editModal"
          data-bs-keyboard="false"
          tabindex="-1"
          aria-labelledby="staticBackdropLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5
                  class="modal-title"
                  id="editModalTitle"
                >
                  Edit Product
                </h5>
              </div>
              <form
                id="editForm"
                class="mx-auto"
                method="post"
                enctype="multipart/form-data"
              >
                <div class="form-group mt-3 mb-3">
                  <label for="name">The title of your record</label>
                  <input
                    type="text"
                    class="form-control"
                    name="EditName"
                    id="EditName"
                    placeholder="Enter here"
                    required
                  />
                  <div class="name_error text-danger"></div>
                </div>
                <div class="form-group mb-3">
                  <label for="artistName">The artists' name(s)</label>
                  <input
                    type="text"
                    class="form-control"
                    name="EditArtistName"
                    id="EditArtistName"
                    placeholder="Enter here"
                    required
                  />
                  <div class="artistName_error text-danger"></div>
                </div>

                <div class="form-group mb-3">
                  <label for="description">Description</label>
                  <textarea
                    class="form-control"
                    name="EditDescription"
                    id="EditDescription"
                    placeholder="Enter here"
                    required
                    rows="3"
                  ></textarea>
                  <div class="description_error text-danger"></div>
                </div>
                <div class="form-group mb-3">
                  <label for="price">Price</label>
                  <input
                    type="number"
                    class="form-control"
                    name="EditPrice"
                    id="EditPrice"
                    placeholder="Enter here (in dollars)"
                    required
                  />
                  <div class="price_error text-danger"></div>
                </div>
                <div class="mb-3">
                  <label
                    for="image"
                    class="form-label"
                    >The record's image</label
                  >
                  <input
                    class="form-control"
                    name="image"
                    type="file"
                    id="EditImage"
                  />
                  <div class="image_error text-danger"></div>
                  <div
                    class="my-3 d-flex justify-content-center"
                    id="Preview"
                  ></div>
                </div>
                <div class="form-group d-hidden">
                  <input
                    type="text"
                    class="form-control d-none"
                    name="productID"
                    id="productID"
                  />
                </div>
                <div class="form-group d-hidden">
                  <input
                    type="text"
                    class="form-control d-none"
                    name="oldImage"
                    id="oldImage"
                  />
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-outline-secondary"
                    data-bs-dismiss="modal"
                  >
                    Cancel
                  </button>
                  <button
                    type="submit"
                    class="btn btn-dark"
                  >
                    Save
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
