<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="icon" type="image/png" href="/images/LOGOBLACk.png">
    <title>Customer Registration</title>
</head>

<body>

    <%- include("partials/header_home") %>
        <div class="card col-sm-4 mt-5 mx-auto">
            <div class="card-body">
                <form class="mx-auto" method="post" enctype="multipart/form-data">
                    <div class="card-header text-center mb-4">
                        <h3>Customer Registration</h3>
                    </div>
                    <div class="form-group mb-3">
                        <label for="username">Username</label>
                        <input type="text" class="form-control" name="username" id="username" placeholder="Enter here"
                            required>
                        <div class="username_error text-danger"></div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" id="password"
                            placeholder="Enter here" required>
                        <div class="password_error text-danger"></div>
                    </div>
                    <div class="mb-3">
                        <label for="profilePicture" class="form-label">Profile Picture</label>
                        <input class="form-control" name="profilePicture" type="file" id="profilePicture">
                        <div class="profilePicture_error text-danger"></div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="name">Customer's Name</label>
                        <input type="text" class="form-control" name="name" id="name" placeholder="Enter here" required>
                        <div class="name_error text-danger"></div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="address">Customer's Address</label>
                        <input type="text" class="form-control" name="address" id="address" placeholder="Enter here"
                            required>
                        <div class="address_error text-danger"></div>
                    </div>
                    <button type="submit" class="btn btn-dark">Sign Up</button>
                </form>
            </div>
        </div>
        <!-- Footer  -->
        <%- include('partials/footer.ejs') %>

            <!-- Boostrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
                crossorigin="anonymous">

                </script>

            <!-- Custom JS -->
            <script>
                const form = document.querySelector('form')
                const usernameError = document.querySelector('.username_error')
                const passwordError = document.querySelector('.password_error')
                const profilePictureError = document.querySelector('.profilePicture_error')
                const nameError = document.querySelector('.name_error')
                const addressError = document.querySelector('.address_error')
                const formData = new FormData();

                form.addEventListener('submit', async (event) => {
                    event.preventDefault();

                    usernameError.textContent = ' '
                    passwordError.textContent = ' '
                    profilePictureError.textContent = ' '
                    nameError.textContent = ' '
                    addressError.textContent = ' '

                    // getting values from the form
                    const username = form.username.value
                    const password = form.password.value
                    const profilePicture = document.getElementById("profilePicture").files[0]
                    const name = form.name.value
                    const address = form.address.value

                    const formData = new FormData();
                    formData.append('username', username);
                    formData.append('password', password);
                    formData.append('profilePicture', profilePicture);
                    formData.append('name', name);
                    formData.append('address', address);

                    try {
                        const res = await fetch('/customerREG', {
                            method: 'POST',
                            // body: JSON.stringify({ username, password, profilePicture, name, address }),
                            // headers: { 'Content-Type': 'application/json' }
                            body: formData
                        })

                        const data = await res.json()
                        console.log(data)
                        if (data.errors) {
                            usernameError.textContent = data.errors.username
                            passwordError.textContent = data.errors.password
                            profilePictureError.textContent = data.errors.profilePicture
                            nameError.textContent = data.errors.name
                            addressError.textContent = data.errors.address
                        }
                        if (data.customer) {
                            location.assign('/customerLOG')
                        }

                    }
                    catch (err) {
                        console.log(err);
                    }
                })
            </script>
</body>

</html>