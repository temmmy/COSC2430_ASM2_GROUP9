<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%- include('./partials/link.ejs') %>
    <script defer src="js/footer.js"></script>
    <script defer src="js/vendorREG.js"></script>
    <title>Minima Records | Vendor Registration</title>
</head>

<body>
  <%- include('partials/header_home') %>
    <main>
      <div class="container">
        <div class="card col-lg-6 mt-5 mx-auto">
          <div class="card-body">
            <form class="mx-auto" method="post" enctype="multipart/form-data">
              <div class="card-header text-center mb-4">
                <h3>Vendor Registration</h3>
              </div>
              <div class="form-group mb-3">
                <label for="username">Username</label>
                <input type="text" class="form-control" name="username" id="username" placeholder="Enter here"
                  required />
                <div class="username_error text-danger"></div>
              </div>
              <div class="form-group mb-3">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Enter here"
                  required />
                <div class="password_error text-danger"></div>
              </div>
              <div class="mb-3">
                <label for="profilePicture" class="form-label">Profile Picture</label>
                <input class="form-control" name="profilePicture" type="file" id="profilePicture" required />
                <div class="profilePicture_error text-danger"></div>
              </div>
              <div class="form-group mb-3">
                <label for="name">Business Name</label>
                <input type="text" class="form-control" name="businessName" id="businessName" placeholder="Enter here"
                  required />
                <div class="businessName_error text-danger"></div>
              </div>
              <div class="form-group mb-3">
                <label for="address">Business Address</label>
                <input type="text" class="form-control" name="businessAddress" id="businessAddress"
                  placeholder="Enter here" required />
                <div class="businessAddress_error text-danger"></div>
              </div>
              <button type="submit" class="btn btn-dark">
                Sign Up
              </button>
            </form>
          </div>
        </div>
      </div>
    </main>
    <!-- Footer  -->
    <%- include('partials/footer.ejs') %>
</body>

</html>